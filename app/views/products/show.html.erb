<h2>商品名</h2>
<span><%= @product.product_name %></span>

<h2>画像</h2>
<span><%= image_tag @product.photo.url(:medium) %></span>

<h2>価格</h2>
<span><%= @product.price %>円</span>

<h2>商品内容</h2>
<span><%= @product.description %></span>

<h2>アイテム</h2>
<span><%= link_to @product_category.name, category_path(@product.category_id) %></span>


<span><%= link_to "index",products_path %></span>
<span><%= link_to "購入する",purchase_path %></span>
<span><%= link_to "カテゴリーへ",categories_path %></span>

<% if admin_signed_in? %> 
<span><%= link_to "商品入力", new_product_path %></span>
<% end %>
